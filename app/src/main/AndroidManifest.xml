<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.adamgyulavari.quickgpaysettings">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_card_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_card_round"
        android:supportsRtl="true">

        <service
            android:name="dev.adamgyulavari.quickgpaysettings.QuickPaySettings"
            android:icon="@drawable/ic_action_credit_card_light"
            android:label="@string/action_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>

</manifest>